  
  <%- contentFor('HeaderCss') %>
  <!-- perticular page css -->

      <!-- DataTables -->
      <link href="public/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
      <link href="public/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
      <!-- Responsive datatable examples -->
      <link href="public/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />

    
  <%- contentFor('body') %>
  
  <!-- Start content -->
                <div class="content">
                    <div class="container-fluid">


                        <div class="row">
                            <div class="col-12">
                                <div class="card m-b-20">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h4 class="mt-0 header-title">Products</h4>
                                                <a href="/product-add" class="float-right btn btn-primary">Add New</a>
                                            </div>
                                        </div>
                                        <form method="post" action="/product-csv" enctype="multipart/form-data">
                                        <div class="row">
                                                <div class="col-4">
                                                    <h5>Upload CSV</h5>
                                                        <input type="file" class="form-control" name="csv" />
                                                </div>
                                                <div class="col-2">        
                                                        <input type="submit" class="btn btn-primary csvBtn" />
                                                </div>
                                            </div>
                                        </form>
                                        
                                        <p class="text-muted m-b-30"></p>

                                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                            <thead>
                                            <tr>
                                                <th>Item No.</th>
                                                <th>Title</th>
                                                <th>Price</th>
                                                <th>Inventory</th>
                                                <th></th>
                                            </tr>
                                            </thead>


                                            <tbody>
                                                <% products.forEach(function(item){ %>
                                                <tr>
                                                    <td><%= item.item_no %></td>
                                                    <td><%= item.title %></td>
                                                    <td><%= item.price %></td>
                                                    <td><%= item.inventory %></td>
                                                    <td>
                                                        <a class="btn btn-warning" href="/product-edit?id=<%= item._id %>">Edit</a>
                                                        <a class="btn btn-danger" href="/product-delete?id=<%= item._id %>">Delete</a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->



                    </div> <!-- container-fluid -->

                </div> <!-- content -->

                <%- contentFor('FooterJs') %>

