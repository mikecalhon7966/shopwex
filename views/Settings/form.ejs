  
    <%- contentFor('HeaderCss') %>
    <!-- perticular page css -->
      
    
    <%- contentFor('body') %>
  <!-- Start content -->
  <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Settings</h4>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="row">
                <div class="col-lg-6">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <h4 class="mt-0 header-title"><%= title %></h4>
                            <form class="" method="post" action="/settings-save" enctype="multipart/form-data">
                                <% if(typeof cmsSettings !== 'undefined'){ %>
                                    <input type="hidden" value="<%= (typeof cmsSettings !== 'undefined')?cmsSettings._id:'' %>" name="_id" />
                                <% } %>  
                                <% if(typeof cmsSettings == 'undefined'){ %>                              
                                <div class="form-group">
                                    <label>Key</label>
                                    <input type="text" class="form-control"  value="<%= (typeof cmsSettings !== 'undefined')?cmsSettings.key:'' %>" name="key">
                                </div>
                                <% } %> 
                                <div class="form-group">
                                    <label>Banner</label>
                                    <input type="file" class="form-control" <%= (typeof cmsSettings == 'undefined' || cmsSettings.value.banner == null)?"required":'' %> name="banner">
                                    <% if(typeof cmsSettings !== 'undefined'){  %>
                                        <img src="<%= cmsSettings.value.banner %>" width="150" />
                                    <% } %>

                                </div>
                                <div class="form-group">
                                    <label>Banner Overlay</label>
                                    <input type="file" class="form-control" <%= (typeof cmsSettings == 'undefined' || cmsSettings.value.banner_overlay == null)?"required":'' %> name="banner_overlay">
                                    <% if(typeof cmsSettings !== 'undefined'){  %>
                                        <img src="<%= cmsSettings.value.banner_overlay %>" width="150" />
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label>Link</label>
                                    <input type="text" value="<%= (typeof cmsSettings !== 'undefined')?cmsSettings.value.link:'' %>" class="form-control" name="link" required placeholder="Type something">
                                </div>
                                <hr>
                                <div class="form-group">
                                    <div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                        <button type="reset" class="btn btn-secondary waves-effect m-l-5">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- end col -->
                
            </div>
            <!-- end row -->
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
    
<%- contentFor('FooterJs') %>
  <!-- Parsley js -->
  <script src="public/plugins/parsleyjs/parsley.min.js"></script>
  <script>
    $(document).ready(function() {
        $('form').parsley();
    });
</script>