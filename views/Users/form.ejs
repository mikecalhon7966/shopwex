  
    <%- contentFor('HeaderCss') %>
    <!-- perticular page css -->
      
    
    <%- contentFor('body') %>
  <!-- Start content -->
  <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">User Details</h4>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="row">
                <div class="col-lg-6">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <h4 class="mt-0 header-title"><%= title %></h4>

                            <form class="" method="post" action="/user-save" enctype="multipart/form-data">
                               
                                    <input type="hidden" value="<%= (typeof userDetails !== 'undefined')?userDetails._id:'' %>" name="_id" />
                        
                              

                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" value="<%= (typeof userDetails !== 'undefined')?userDetails.name:'' %>" class="form-control" name="name" required placeholder="Type something">
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" value="<%= (typeof userDetails !== 'undefined')?userDetails.email:'' %>" class="form-control" name="email" required placeholder="Type something">
                                </div>

                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" value="<%= (typeof userDetails !== 'undefined')?userDetails.phone:'' %>" class="form-control" name="phone" required placeholder="Type something">
                                </div>

                                <div class="form-group">
                                    <label>Business Name</label>
                                    <input type="text" value="<%= (typeof userDetails !== 'undefined')?userDetails.business_name:'' %>" class="form-control" name="business_name" required placeholder="Type something">
                                </div>

                                <div class="form-group">
                                    <label>Business Address</label>
                                    <input type="text" value="<%= (typeof userDetails !== 'undefined')?userDetails.business_address:'' %>" class="form-control" name="business_address" required placeholder="Type something">
                                </div>
                               
                                <div class="form-group">
                                    <div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                        <button type="reset" class="btn btn-secondary waves-effect m-l-5">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <% if(userDetails.status == 1) { %>
                        <a class="btn btn-danger" href="/user-block?id=<%= userDetails._id %>">Unapproved</a>
                    <% }else{ %>
                        <a class="btn btn-primary" href="/user-unblock?id=<%= userDetails._id %>">Approved</a>
                    <% } %>
                </div>
                <!-- end col -->
                
            </div>
            <!-- end row -->
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
    
<%- contentFor('FooterJs') %>
  <!-- Parsley js -->
  <script src="public/plugins/parsleyjs/parsley.min.js"></script>
  <script>
    $(document).ready(function() {
        $('form').parsley();
    });
</script>
